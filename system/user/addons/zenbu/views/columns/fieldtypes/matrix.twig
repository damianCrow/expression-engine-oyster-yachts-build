	<a href="#e_{{entry_id}}_f_{{field_id}}" class="fancyboxmatrix">{{'show_'|t}}{{'matrix'|t}}</a>
	<div style="display: none">
		<div id="e_{{entry_id}}_f_{{field_id}}">
{% endif %}
		
